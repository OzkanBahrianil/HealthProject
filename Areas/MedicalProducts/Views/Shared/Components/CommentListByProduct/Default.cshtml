
@model IEnumerable<EntityLayer.Concrate.CommentProduct>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
<div class="media">

    <img src="~/Admin/assets/images/users/1.jpg"
         alt="user"
         width="50"
         class="rounded-circle img-fluid" />

    <div class="media-body">

        <p>
            Henüz Yorum Yapılmadı, İlk Yorum Yapan Siz Olun.
        </p>


    </div>
</div>

    }
    @foreach (var item in Model)
    {

<div class="media">
    <img src="~/Admin/assets/images/users/1.jpg"
         alt="user"
         width="50"
         class="rounded-circle img-fluid" />


    <div class="media-body">

        <h5 class="mt-0">@item.CommentProductUserName <i class="far fa-calendar-alt"></i>  @(((DateTime)item.CommentProductDate).ToString("dd-MMM-yyyy"))</h5>
        <p>
            Konu: @item.CommentProductTitle
            <br />Mesaj: @item.CommentProductContent
        </p>

    </div>
</div>
    }

</div>