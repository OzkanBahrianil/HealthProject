
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Yazar Bölümü</h1>
<br />
<div>
    <br />
    <input type="text" id="WriterID" placeholder="Yazar ID değeri" class="form-control" /> <br />
</div>
<button type="button" id="btngetlist" class="btn btn-outline-primary">Yazar Listesi</button>
<button type="button" id="btngetbyıd" class="btn btn-outline-primary">Yazar Getir</button>
<button type="button" id="btndeletebyıd" class="btn btn-outline-primary">Yazar Sil</button>
<br />
<div id="writerlist"></div>
<br />
<div id="writerget"></div>



@section scripts{ 
    <script>
        $("#btngetlist").click(function () {
            $.ajax({
                contentType: "application/json",
                dataType: "json",
                type: "Get",
                url: "/Admin/Writer/WriterList",
                success: function (func) {
                    let w = jQuery.parseJSON(func)
                    let tablehtml = "<table class=table table-bordered> <tr> <th>Yazar ID</th><th>Yazar Adı</th> </tr>";
                    $.each(w, (index, value) => {
                        tablehtml += `<tr><td>${value.Id}</td><td>${value.UserName}</td></tr>`
                    });
                    tablehtml += "</table>";
                    $("#writerlist").html(tablehtml);
                }
            });
        });

        $("#btngetbyıd").click(x => {
            let id = $("#WriterID").val();
            $.ajax({
                contentType: "application/json",
                dataType: "json",
                type: "Get",
                url: "/Admin/Writer/WriterListByID/",
                data: { WriterId: id },
                success: function (func) {
                    let w = jQuery.parseJSON(func)
                    let getvalue = `<table class= table table-bordered> <tr><th>Yazar ID</th><th>Yazar Adı</th> </tr><tr><td>${w.Id}</td><td>${w.UserName}</td></tr></table>`;
                    $("#writerget").html(getvalue);
                }
            });
        });




        $("#btndeletebyıd").click(x => {
            let id = $("#WriterID").val();
            $.ajax({
    
                dataType: "json",
                type: "post",
                url: "/Admin/Writer/WriterDelete/",
                data: { WriterId: id },
                success: function (func) {
                    alert("Silme İşlemi Başarılı.!!!"); 
                }
            });
        });
    </script>

    }