@using EntityLayer.Concrate
@model List<Message>


@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/Admin/stylemes.css" rel="stylesheet">

<body>
    @foreach (var item in Model)
    {
        <div class="mail-box-header">

            <h2>
                Mesaj Detayları
            </h2>



            <div class="mail-tools tooltip-demo m-t-md">


                <h3>
                    <span class="font-normal">Konu: </span>@item.Subject
                </h3>
                <h5>
                    <span class="float-right font-normal">@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</span>
                    <span class="font-normal">Gönderen: </span>@item.SenderUser.NameSurname
                </h5>
            </div>
        </div>
        <div class="mail-box">


            <div class="mail-body">
                <p>
                    @item.MessageDetails
                </p>

            </div>

            <div class="mail-body text-right tooltip-demo">

                <a class="btn btn-sm btn-white" href="/Admin/AdminMessage/SendMessage/@item.SenderID/"><i class="fa fa-reply"></i> Cevap Ver</a>
                <a class="btn btn-sm btn-white" href="/Admin/AdminMessage/InBox/"><i class="fa fa-arrow-right"></i>Mesajlara Dön</a>
            
            </div>



        </div>
    }
</body>









