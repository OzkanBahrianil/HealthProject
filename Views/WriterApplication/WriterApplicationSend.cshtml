@model HealthProject.Models.WriterApplicationPdf


@{
    ViewData["Title"] = "WriterApplicationSend";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<h1>Yeni Yazar Başvurusu</h1>
<br />
@if (TempData["AlertMessageAdd"] != null)
{
    <div class="alert alert-danger">
        <strong>Başarısız...!</strong>&nbsp;&nbsp;&nbsp; @TempData["AlertMessageAdd"]
    </div>
    <br />
}


@using (Html.BeginForm("WriterApplicationSend", "WriterApplication", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("Mezun Olunan Veya Devam Eden Üniversite")
    @Html.TextBoxFor(x => x.ApplicationUniversity, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Bölüm")
    @Html.TextBoxFor(x => x.ApplicationUniversityDepartment, new { @class = "form-control", @required = "required" })
    <br /> 
    @Html.Label("Telefon Numarası")
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @required = "required" })
    <br />
    <div class="form-group">
        <label>CV Yükle (PDF)</label>
        <div class="custom-file">
            <input id="logo" type="file" name="ApplicationCV" class="custom-file-input" required="">
            <label for="logo" class="custom-file-label">Dosya Seç...</label>
        </div>
    </div>
    

    <br />
    @Html.Label("Ön Yazı")
    @Html.TextAreaFor(x => x.ApplicationCoverLetter, 25, 5, new { @class = "form-control", @required = "required" })

    <br />
    <button class="btn btn-info">Başvur</button>

}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script type="text/javascript">
    $('.custom-file-input').on('change', function () {
        let fileName = $(this).val().split('\\').pop();
        $(this).next('.custom-file-label').addClass("selected").html(fileName);
    });</script>




