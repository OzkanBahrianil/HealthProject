@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrate.Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Bildirimler</h5>

        </div>
        <div class="ibox-content">
            <table class="table table-responsive-md" style="text-align:center; ">
                <thead>
                    <tr>
                        <th></th>
                        <th>Bildirim İçeriği</th>
                        <th>Bildirimin Türü</th>
                        <th>Bildirim Zamanı</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody class="alert" >
                        <tr class="alert alert-dismissable">
                            <td class="nav-profile-image"> <img src="~/NotificationImageFiles/@item.NotificationTypeSymbol" alt="image"/>  </td>
                            <td>
                                @item.NotificationDetails
                            </td>
                            <td  style="background-color:@item.NotificationColor; border-radius:10px;  padding: 0.6em 1em; color:white;">
                                @item.NotificationType
                            </td>
                            <td>
                                @item.NotificationTime.ToShortDateString()
                            </td>


                        </tr>
                    </tbody>

                }
            </table>
       
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("AllNotification", new { page }))

         

        </div>
    </div>
</div>






