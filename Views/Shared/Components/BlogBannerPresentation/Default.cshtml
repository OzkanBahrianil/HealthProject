@using EntityLayer.Concrate
@model List<Presentation>


<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/cssslider.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>

        .carousel-inner img {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>

    <div id="demo" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner" style="height:850px;">
            <div class="carousel-item active" style="height:850px;">
                <img src="~/PresentationImageFiles/Presentation.jpg" alt="Image" width="1100" height="500">

                <div class="contentSlider" style="bottom: 0px; position: fixed;">
                    <a style="color:white;" href="/About/Index/">
                        <h1>Hoşgeldiniz</h1>
                        <small> Sitemize Hoş Geldiniz. Hakkımızda: @ViewBag.About.Substring(0, @ViewBag.About.Substring(0, 750).LastIndexOf(" ")) ... </small>
                    </a>
                    <br />
                    <br />
                    <a style="margin-left: 46.5%; " href="/About/Index/" class="myBtn">Daha Fazlası</a>

                </div>

            </div>
            @foreach (var item in Model)
            {


                <div class="carousel-item" style="height:850px;">
                    <img src="~/PresentationImageFiles/@item.PresentationImage" alt="Image" width="1100" height="500">

                    <div class="contentSlider" style="bottom: 0px; position: fixed;">
                        <a style="color:white;" href="/Presentation/PresentationRead/@item.PresentationID">
                            <h1>@item.PresentationTitle</h1>
                            <small>@item.PresentationShortDetails.Substring(0, item.PresentationShortDetails.Substring(0, 750).LastIndexOf(" ")) ...</small>
                        </a>
                        <br />
                        <br />
                        <a style="margin-left: 46.5%; " href="/Presentation/PresentationRead/@item.PresentationID" class="myBtn">Sayfaya Git</a>
                    </div>

                </div>

            }
        </div>
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>

</body>