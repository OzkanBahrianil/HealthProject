@using EntityLayer.Concrate
@model List<Notification>

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        @if (@ViewBag.WriterNotificationCount > 0)
        {
            <span class="count-symbol bg-danger"></span>

        }
        else
        {
            <span class="count-symbol"></span>
        }

    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Bildirimler</h6>
        @foreach (var item in Model)
        {

            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item" href="/Notification/AllNotification/">
                <div class="nav-profile-image">
                    <img style="width:40px;" src="~/NotificationImageFiles/@item.NotificationTypeSymbol" />
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject font-weight-normal mb-1" style="background-color:@item.NotificationColor;  border-radius:10px;  padding: 0.6em 1em; color:white;">@item.NotificationType</h6>
                    <p class="text-gray ellipsis mb-0">@item.NotificationDetails</p>
                </div>
            </a>
        }

        <div class="dropdown-divider"></div>
        <a href="/Notification/AllNotification/">
            <h6 class="p-3 mb-0 text-center">Tüm Bildirimleri Gör</h6>
        </a>

    </div>
</li>