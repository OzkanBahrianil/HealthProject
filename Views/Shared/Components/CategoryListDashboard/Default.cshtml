@using EntityLayer.Concrate
@model List<Category>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Kategorileri</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th> Kategori Adı</th>
                                <th> Kategori Durumu</th>
                                <th> Kategori Açıklaması</th>
                                <th> Aktif Blog Durumu</th>
                                <th> Bloglara Git</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td> @item.CategoryName </td>
                                @if (item.CategoryStatus)
                                {
                                    <td> Aktif   </td>

                                }
                                else
                                {
                                    <td> Pasif </td>
                                }
                                <td> @item.CategoryDescription </td>


                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-gradient-success" role="progressbar" style="width:  @item.Blogs.Where(x => x.CategoryID == item.CategoryID).ToList().Count()%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td> <a href="/Blog/BlogListByCategory/@item.CategoryID/" class="btn btn-outline-primary">Görüntüle</a></td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
