@using EntityLayer.Concrate
@model List<MedicalProduct>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Eklenen Son 10 Ürün</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Başlık</th>
                                <th>Yorum Sayısı</th>
                                <th>Kategori</th>
                                <th>Üretim Tarihi</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>
                                        <img src="~/MedicalProductImageFiles/@item.ProductThumbnailImage" class="mr-2 adminDS" alt="image">
                                    </td>
                                    <td>
                                        @item.ProductTitle
                                    </td>
                                    <td>@item.CommentProducts.Count()</td>
                                    <td>
                                        <label class="badge badge-gradient-success adminDSK">@item.ProductCategory.ProductCategoryName</label>
                                    </td>
                                    <td> @(((DateTime)item.ProductRealiseDate).ToString("dd-MMM-yyyy"))</td>
                                    <td> <a href="/MedicalProducts/Home/ProductReadAll/@item.ProductID" class="btn btn-dark">Detayı Gör</a> </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

