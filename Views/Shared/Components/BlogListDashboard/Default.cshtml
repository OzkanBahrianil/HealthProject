@using EntityLayer.Concrate
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Gönderi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                               <th></th>
                                <th>Başlık</th>
                                <th>Yorum Sayısı</th>
                                <th>Puan</th>
                                <th>Kategori</th>
                                <th>Tarih</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>
                                        <img src="~/BlogImageFiles/@item.BlogThumbnailImage" class="mr-2 adminDS" alt="image">
                                    </td>
                                    <td>
                                        @item.BlogTitle
                                    </td>  
                                    <td>
                                        @item.Comments.Count()
                                    </td>
                                    <td>
                                        @await Component.InvokeAsync("CommentRayting", new { id = item.BlogID })
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success adminDSK">@item.Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
                                    <td> <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-dark">Detayı Gör</a> </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

