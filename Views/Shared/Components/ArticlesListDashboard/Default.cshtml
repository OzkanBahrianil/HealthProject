
@using EntityLayer.Concrate
@model List<Articles>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Makale</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Başlık</th>
                                <th>Kategori</th>
                                <th>Tarih</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                            <tr>
                                
                                <td><a href="~/ArticlesPdf/@item.ArticlesPdf" class="mr-2" style="color:black;">PDF:<i class="mdi mdi-file-pdf-box"></i></a></td>
                               
                                <td>
                                    @item.ArticlesTitle
                                </td>

                                <td>
                                    <label class="badge badge-gradient-success">@item.ArticleCategory.ArticleCategoryName</label>
                                </td>
                                <td> @(((DateTime)item.ArticlesPublishDate).ToString("dd-MMM-yyyy"))</td>
                                <td> <a href="/Article/Article/ArticlesReadAll/@item.ArticlesID" class="btn btn-dark">Detayı Gör</a> </td>

                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

