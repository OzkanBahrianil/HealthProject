
@using EntityLayer.Concrate
@model List<ArticleCategory>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Makale Kategorileri</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th> Kategori Adı</th>
                                <th> Kategori Durumu</th>
                                <th> Aktif Blog Durumu</th>
                                <th> Bloglara Git</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td> @item.ArticleCategoryName </td>
                                    @if (item.ArticleCategoryStatus)
                                    {
                                        <td> Aktif   </td>

                                    }
                                    else
                                    {
                                        <td> Pasif </td>
                                    }



                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-gradient-info" role="progressbar" style="width:  @item.Articles.Where(x => x.ArticleCategoryID == item.ArticleCategoryID).ToList().Count()%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                    <td> <a href="/Article/Article/ArticlesListByCategory/@item.ArticleCategoryID/" class="btn btn-outline-primary">Görüntüle</a></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
