@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrate.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <div class="media">

            <img src="~/Admin/assets/images/users/1.jpg" alt="user"
                 width="50"
                 class="rounded-circle img-fluid" />

            <div class="media-body">

                <p>
                    Henüz Yorum Yapılmadı, İlk Yorum Yapan Siz Olun.
                </p>


            </div>
        </div>

    }
    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/Admin/assets/images/users/1.jpg"
                 alt="user"
                 width="50"
                 class="rounded-circle img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName  <i class="far fa-calendar-alt"></i>  @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</h5>
                <div>
                    @for (int i = 0; i < item.BlogScore; i++)
                    {
                        <span class="fa fa-star"></span>
                    }
                    @for (int i = item.BlogScore; i < 5; i++)
                    {
                        <span class="fa fa-star-o"></span>
                    }
                </div>
                <p>
                    Konu: @item.CommentTitle
                    <br />Mesaj: @item.CommentContent
                </p>



            </div>
        </div>
    }
    <br />
    <br />
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("BlogReadAll", new { page }))
</div>