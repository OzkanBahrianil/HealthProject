@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrate.Message>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<head>
    <link href="~/Admin/stylemes.css" rel="stylesheet">
    <link href="~/Admin/font-awesome.css" rel="stylesheet">

</head>

<div id="wrapper">
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox ">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">
                            <div class="space-25"></div>
                            <h5>Dosyalar</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="/Message/InBox/"> <i class="fa fa-inbox "></i> Gelen Kutusu <span class="label label-warning float-right" style="width:16px; text-align:center;">@ViewBag.InboxR</span> </a></li>
                                <li><a href="/Message/InBoxSend/"> <i class="fa fa-envelope-o"></i> Gönderilenler <span class="label label-warning float-right" style="width:16px; text-align:center;">@ViewBag.InboxRS</span> </a></li>
                                <li><a href="/Message/SendMessage/"> <i class="fa fa-envelope-o"></i> Mesaj Gönder </a></li>

                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">


                    <h2>
                        Gelen Kutusu (@ViewBag.InboxR)
                    </h2>
                    <div class="mail-tools tooltip-demo m-t-md">
                        <div class="btn-group float-right fa">

                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("InBox", new { page }))



                        </div>
                        <button class="btn btn-white btn-sm" data-placement="left" title="Refresh inbox" onclick="location.reload();"><i class="fa fa-refresh"></i> Refresh</button>


                    </div>
                </div>
                <div class="mail-box">

                    <table class="table table-hover table-mail">
                        <tbody class="alert">

                            @foreach (var item in Model)
                            {

                                @if (item.MessageStatus)
                                {
                                    <tr class="read" style=" text-align: center; ">
                                        <td class="check-mail">
                                            <a href="/Message/MessageDetails/@item.MessageID">    <input type="checkbox" class="i-checks"></a>
                                        </td>
                                        <td><img src="~/WriterImageFiles/@item.SenderUser.Image" /></td>
                                        <td class="mail-ontact"><a href="/Message/MessageDetails/@item.MessageID">@item.SenderUser.NameSurname</a></td>
                                        <td class="mail-subject"><a href="/Message/MessageDetails/@item.MessageID">@item.Subject</a></td>
                                        <td class=""></td>
                                        <td class="text-right mail-date">@item.MessageDate.ToShortDateString()</td>
                                        <td><a class="btn btn-outline-primary" href="/Message/MessageDetails/@item.MessageID">Mesajı Oku</a></td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="read" style=" background-color: lightgray; text-align: center; ">
                                        <td class="check-mail">
                                            <a href="/Message/MessageDetails/@item.MessageID">    <input type="checkbox" class="i-checks"></a>
                                        </td>
                                        <td><img src="~/WriterImageFiles/@item.SenderUser.Image" /></td>
                                        <td class="mail-ontact"><a href="/Message/MessageDetails/@item.MessageID">@item.SenderUser.NameSurname</a></td>
                                        <td class="mail-subject"><a href="/Message/MessageDetails/@item.MessageID">@item.Subject</a></td>
                                        <td class=""></td>
                                        <td class="text-right mail-date">@item.MessageDate.ToShortDateString()</td>
                                        <td><a class="btn btn-outline-primary" href="/Message/MessageDetails/@item.MessageID">Mesajı Oku</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>









