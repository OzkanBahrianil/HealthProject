@model EntityLayer.Concrate.AppUser

<div class="modal-content" id="Modaltest">
    <div class="modal-header">
        <h3>@Model.NameSurname</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

    </div>
    <div class="modal-body">
     
        <small>Yazar Hakkında:  @Model.About</small><br /><br />
        <h6>Tanıtım Videosu</h6>  <br />

        <div class="embed-responsive embed-responsive-21by9">

            <iframe width="560" height="700"
                    src="@Model.VideoUrl" title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
    </div>
</div>




