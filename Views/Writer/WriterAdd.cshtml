@model HealthProject.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profili</h4>
                <br />
                @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">İsim Soyisim</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail address</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    </div>

                    @*<div class="form-group">
                        <label>Yazar Görseli</label>
                        <input type="file" name="WriterImage" />
                    </div>*@
                    <div class="form-group">
                        <label>Yazar Görseli</label>
                        <div class="custom-file">
                            <input id="logo" type="file" name="WriterImage" class="custom-file-input">
                            <label for="logo" class="custom-file-label">Dosya Seç...</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkında</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 15, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal Et</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">$('.custom-file-input').on('change', function () {
        let fileName = $(this).val().split('\\').pop();
        $(this).next('.custom-file-label').addClass("selected").html(fileName);
    }); </script>