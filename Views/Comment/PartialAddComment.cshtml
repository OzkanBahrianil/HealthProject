@if (TempData["AletrMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Başarısız!</strong>&nbsp;&nbsp;&nbsp; @TempData["AletrMessage"]
    </div>

}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Başarılı!</strong>&nbsp;&nbsp;&nbsp; @TempData["AlertMessage"]
    </div>

}
<head>
    <style>
        .checked {
            color: orange;
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="comment-top">
    <h4>Bir Yorum Yapın</h4>
    <div class="comment-bottom">
        <form action="/Comment/PartialAddComment/" method="post">
        
            <input class="form-control" type="text" name="CommentUserName" placeholder="Adınız ve Soyadınız" required="">

            <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">

            <input style="display: none;" class="form-control" type="text" name="BlogID" placeholder="Konu" value="@ViewData["PartialAddComment"]" required="">
    @Html.AntiForgeryToken()
            <textarea class="form-control" name="CommentContent" placeholder="Mesajınız..." required=""></textarea>
            <div style="font-size:20px;" onmouseout="CRateSelected()">
                <span>Puan Ver:&nbsp;&nbsp;&nbsp;</span>
                <span id="span1" onmouseout="CRateOut(1)" onmouseover="CRateOver(1)" onclick="CRateClick(1)" class="fa fa-star-o"></span>
                <span id="span2" onmouseout="CRateOut(2)" onmouseover="CRateOver(2)" onclick="CRateClick(2)" class="fa fa-star-o"></span>
                <span id="span3" onmouseout="CRateOut(3)" onmouseover="CRateOver(3)" onclick="CRateClick(3)" class="fa fa-star-o"></span>
                <span id="span4" onmouseout="CRateOut(4)" onmouseover="CRateOver(4)" onclick="CRateClick(4)" class="fa fa-star-o"></span>
                <span id="span5" onmouseout="CRateOut(5)" onmouseover="CRateOver(5)" onclick="CRateClick(5)" class="fa fa-star-o"></span>
            </div>
            <br />
            <div>
                <input type="hidden" name="BlogScore" id="lblRating" value="0" />
            </div>
            <button type="submit" id="button1" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>



